
        <link rel="stylesheet" href="/css/registration.css">

        <div id="central">

            <div class="block"></div>
                <form  method="POST">

                    <div class="box">

                        <h2>Register here:</h2>
                        <div>
                            {{#if err }}
                            <p>Oops! Something is wrong! :(</p>
                            <p>You must fill out the entire form</p>
                            {{/if}}
                        </div>
                        <input type="text" name="first" placeholder="First Name" autocomplete="off">

                        <input type="text" name="last" placeholder="Last Name" autocomplete="off">

                        <input type="text" name="email" placeholder="Email" autocomplete="off">

                        <input type="password" name="password" placeholder="Password">

                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button>Let's Sign...</button>

                </form>
                    <h3>If you have already an account, please <a href="/login">log in</a>.</h3>
                </div>

        </div>
